{
  "nist_framework": {
    "name": "NIST SP 800-53 Revision 5",
    "description": "Security and Privacy Controls for Information Systems and Organizations",
    "version": "Revision 5",
    "last_updated": "2020-09-23",
    "documentation_url": "https://csrc.nist.gov/publications/detail/sp/800-53/rev-5/final"
  },
  "control_families": {
    "AC": {
      "family_name": "Access Control",
      "description": "Controls for limiting information system access to authorized users, processes acting on behalf of authorized users, and devices",
      "controls": {
        "AC-2": {
          "control_name": "Account Management",
          "baseline": [
            "LOW",
            "MODERATE",
            "HIGH"
          ],
          "enhancements": {
            "AC-2(4)": {
              "enhancement_name": "Automated Audit Actions",
              "description": "Automatically audit account creation, modification, enabling, disabling, and removal actions"
            }
          }
        },
        "AC-7": {
          "control_name": "Unsuccessful Logon Attempts",
          "baseline": [
            "LOW",
            "MODERATE",
            "HIGH"
          ],
          "enhancements": {
            "AC-7a": {
              "enhancement_name": "Enforcement of Limits",
              "description": "Enforce a limit of consecutive invalid logon attempts by a user during a time period"
            }
          }
        },
        "AC-10": {
          "control_name": "Concurrent Session Control",
          "baseline": [
            "MODERATE",
            "HIGH"
          ],
          "description": "Limit the number of concurrent sessions for each system account"
        },
        "AC-17": {
          "control_name": "Remote Access",
          "baseline": [
            "LOW",
            "MODERATE",
            "HIGH"
          ],
          "enhancements": {
            "AC-17(2)": {
              "enhancement_name": "Protection of Confidentiality/Integrity Using Encryption",
              "description": "Implement cryptographic mechanisms to protect the confidentiality and integrity of remote access sessions"
            }
          }
        }
      }
    },
    "AU": {
      "family_name": "Audit and Accountability",
      "description": "Controls for creating, protecting, and retaining information system audit records",
      "controls": {
        "AU-3": {
          "control_name": "Content of Audit Records",
          "baseline": [
            "LOW",
            "MODERATE",
            "HIGH"
          ],
          "enhancements": {
            "AU-3a": {
              "enhancement_name": "Event Type",
              "description": "Ensure audit records contain information that establishes what type of event occurred"
            },
            "AU-3b": {
              "enhancement_name": "Date and Time",
              "description": "Ensure audit records contain information that establishes when the event occurred"
            }
          }
        },
        "AU-5": {
          "control_name": "Response to Audit Processing Failures",
          "baseline": [
            "LOW",
            "MODERATE",
            "HIGH"
          ],
          "enhancements": {
            "AU-5b": {
              "enhancement_name": "Actions Upon Failure",
              "description": "Take organization-defined actions upon audit processing failure"
            },
            "AU-5(2)": {
              "enhancement_name": "Real-Time Alerts",
              "description": "Provide an alert within an organization-defined real-time period to organization-defined personnel upon audit failure events"
            }
          }
        },
        "AU-9": {
          "control_name": "Protection of Audit Information",
          "baseline": [
            "LOW",
            "MODERATE",
            "HIGH"
          ],
          "enhancements": {
            "AU-9a": {
              "enhancement_name": "Protection from Unauthorized Access",
              "description": "Protect audit information and audit logging tools from unauthorized access, modification, and deletion"
            }
          }
        }
      }
    },
    "CM": {
      "family_name": "Configuration Management",
      "description": "Controls for establishing and maintaining baseline configurations and inventories",
      "controls": {
        "CM-1": {
          "control_name": "Policy and Procedures",
          "baseline": [
            "LOW",
            "MODERATE",
            "HIGH"
          ],
          "enhancements": {
            "CM-1a1(a)": {
              "enhancement_name": "Policy Development",
              "description": "Develop, document, and disseminate configuration management policy"
            }
          }
        },
        "CM-6": {
          "control_name": "Configuration Settings",
          "baseline": [
            "LOW",
            "MODERATE",
            "HIGH"
          ],
          "enhancements": {
            "CM-6b": {
              "enhancement_name": "Implementation of Settings",
              "description": "Implement the configuration settings"
            }
          }
        },
        "CM-7": {
          "control_name": "Least Functionality",
          "baseline": [
            "LOW",
            "MODERATE",
            "HIGH"
          ],
          "enhancements": {
            "CM-7a": {
              "enhancement_name": "Essential Capabilities",
              "description": "Configure the system to provide only mission-essential capabilities"
            }
          }
        }
      }
    },
    "IA": {
      "family_name": "Identification and Authentication",
      "description": "Controls for identifying and authenticating users and devices",
      "controls": {
        "IA-5": {
          "control_name": "Authenticator Management",
          "baseline": [
            "LOW",
            "MODERATE",
            "HIGH"
          ],
          "enhancements": {
            "IA-5(1)": {
              "enhancement_name": "Password-Based Authentication",
              "description": "For password-based authentication, implement various security measures",
              "sub_enhancements": {
                "IA-5(1)(c)": {
                  "enhancement_name": "Store Encrypted",
                  "description": "Store and transmit only cryptographically-protected passwords"
                }
              }
            }
          }
        }
      }
    },
    "SC": {
      "family_name": "System and Communications Protection",
      "description": "Controls for protecting information in transmission and at rest",
      "controls": {
        "SC-5": {
          "control_name": "Denial-of-Service Protection",
          "baseline": [
            "LOW",
            "MODERATE",
            "HIGH"
          ],
          "enhancements": {
            "SC-5a": {
              "enhancement_name": "Protection Capability",
              "description": "Protect against or limit the effects of denial-of-service attacks"
            },
            "SC-5(2)": {
              "enhancement_name": "Capacity, Bandwidth, and Redundancy",
              "description": "Manage capacity, bandwidth, or other redundancy to limit the effects of information flooding denial-of-service attacks"
            }
          }
        },
        "SC-10": {
          "control_name": "Network Disconnect",
          "baseline": [
            "MODERATE",
            "HIGH"
          ],
          "description": "Terminate the network connection associated with a communications session at the end of the session or after a defined time period of inactivity"
        }
      }
    }
  },
